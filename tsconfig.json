{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"]
    },
    "types": ["node", "knex"]  // Add "knex" explicitly here
  },
  "include": ["src/**/*", "migrations/*/", "seeds/*/", "knexfile.ts", "index.ts"],
  "exclude": ["node_modules"]
}
